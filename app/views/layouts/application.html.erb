<!DOCTYPE html>
<html>
<head>
  <title>SetApp</title>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://unpkg.com/blaze">
  <%= stylesheet_link_tag    'https://s3.us-east-2.amazonaws.com/set-game-gals/application.css', media: 'all' %>
  <%= javascript_include_tag 'https://s3.us-east-2.amazonaws.com/set-game-gals/application.js' %>
  <%= javascript_include_tag 'https://s3.us-east-2.amazonaws.com/set-game-gals/game.js' %>
  <%= javascript_include_tag 'https://s3.us-east-2.amazonaws.com/set-game-gals/no-sets.js' %>
<style>
@import url('https://fonts.googleapis.com/css?family=Raleway');
</style>
</head>
<style>

a{
    font-family: 'Raleway', sans-serif;}
a:active{
   color: white;

}
a:visited{
  color: lightblue;
}

body {
  background-image: <%= image_tag("https://s3.us-east-2.amazonaws.com/set-game-gals/whale-shark1.jpg") %>;
}
</style>
<body>
  <ul class="c-nav c-nav--inline" >
    <li class="c-nav__item"><%= link_to "Home", '/' %></li>
    <% if user_signed_in? %>
      <li class="c-nav__item"><%= link_to current_user.username, current_user %></li>
      <li class="c-nav__item c-nav__item--right"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li class="c-nav__item c-nav__item--right"><%= link_to "Register", new_user_registration_path %></li>
      <li class="c-nav__item c-nav__item--right"><%= link_to "Login", new_user_session_path %></li>
    <% end %>
  </ul>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>

</body>
</html>
